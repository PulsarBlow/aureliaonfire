{
  "bundles": {
    "dist/app-build": {
      "includes": [
        "*/**/*",
        "*/**/*.html!text",
        "*/**/*.css!text"
      ],
      "options": {
        "inject": true,
        "minify": true
      }
    },
    "dist/vendor": {
      "includes": [
        "aurelia-firebase",
        "moment",
        "firebase",
        "nprogress"
      ],
      "excludes": [
        "aurelia-animator-css",
        "aurelia-bootstrapper",
        "aurelia-fetch-client",
        "aurelia-framework",
        "aurelia-history-browser",
        "aurelia-loader-default",
        "aurelia-logging-console",
        "aurelia-router",
        "aurelia-templating-binding",
        "aurelia-templating-resources",
        "aurelia-templating-router"
      ],
      "options": {
        "inject": true,
        "minify": true
      }
    },
    "dist/aurelia": {
      "includes": [
        "aurelia-animator-css",
        "aurelia-bootstrapper",
        "aurelia-fetch-client",
        "aurelia-framework",
        "aurelia-history-browser",
        "aurelia-loader-default",
        "aurelia-logging-console",
        "aurelia-router",
        "aurelia-templating-binding",
        "aurelia-templating-resources",
        "aurelia-templating-router"
      ],
      "options": {
        "inject": true,
        "minify": true
      }
    }
  }
}
